<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <FileAlignment>512</FileAlignment>
    <RestoreProjectStyle>PackageReference</RestoreProjectStyle>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <PropertyGroup>
    <UnifiedPlatform>Unknown</UnifiedPlatform>
    <UnifiedPlatform Condition="'$(Platform)' == 'x86'">x86</UnifiedPlatform>
    <UnifiedPlatform Condition="'$(Platform)' == 'x64'">x64</UnifiedPlatform>
    <UnifiedPlatform Condition="'$(Platform)' == 'AnyCPU'">AnyCPU</UnifiedPlatform>
  </PropertyGroup>

  <PropertyGroup>
    <BuildVs_OutputPath>$(SolutionDir)_build\$(SolutionName).$(UnifiedPlatform).$(Configuration)\$(TargetFramework)\</BuildVs_OutputPath>
    <BuildVs_BaseIntermediateOutputPath>$(SolutionDir)_build\.obj\$(MSBuildProjectName)\</BuildVs_BaseIntermediateOutputPath>
    <BuildVs_IntermediateOutputPath>$(BuildVs_BaseIntermediateOutputPath)\$(UnifiedPlatform).$(Configuration)\$(TargetFramework)\</BuildVs_IntermediateOutputPath>
    <OutputPath>$(BuildVs_OutputPath)</OutputPath>
    <BaseIntermediateOutputPath>$(BuildVs_BaseIntermediateOutputPath)</BaseIntermediateOutputPath>
    <IntermediateOutputPath>$(BuildVs_IntermediateOutputPath)</IntermediateOutputPath>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo> <!-- .NET Core projects will otherwise generate conflicting assembly info -->
  </PropertyGroup>

  <PropertyGroup Condition="'$(Platform)' == 'x86'">
    <PlatformTarget>x86</PlatformTarget>
    <DefineConstants>$(DefineConstants);WIN32</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Platform)' == 'x64'">
    <PlatformTarget>x64</PlatformTarget>
    <DefineConstants>$(DefineConstants);WIN64</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Platform)' == 'AnyCPU'">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DefineConstants>$(DefineConstants)</DefineConstants>
  </PropertyGroup>

</Project>
